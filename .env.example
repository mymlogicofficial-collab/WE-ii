# ==============================================
# WE-ii Environment Variables Template
# ==============================================
# Copy this file to .env and fill in your actual values
# NEVER commit the .env file to version control

# Stripe API Configuration
# Get your keys from: https://dashboard.stripe.com/apikeys
STRIPE_API_KEY=sk_test_your_stripe_secret_key_here

# Email Configuration (for notifications)
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_ADDRESS=your_email@example.com
EMAIL_PASSWORD=your_email_app_password_here

# Application Configuration
# Set a secure founder key for authentication
FOUNDER_KEY=your_secure_founder_key_here

# Target identifiers (use generic placeholders in production)
TARGET_IDENTIFIER=your_target_identifier

# Platform Configuration
PLATFORM_USER=User
PLATFORM_IDENTITY=Platform

# Flask Server Configuration (for production deployment)
# For development: use 127.0.0.1 (localhost only)
# For production: use proper reverse proxy (nginx, etc.) and set accordingly
FLASK_HOST=127.0.0.1
FLASK_PORT=5000

# Mirror Assets (monetary values should be numeric, e.g., 5000.00)
MIRROR_ASSETS=0.00
