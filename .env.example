# WE-ii Lila Platform Configuration
# Copy this file to .env and fill in your actual API keys

# Stripe API Key (get from https://dashboard.stripe.com/apikeys)
# Use test key for development (sk_test_...)
# Use live key for production (sk_live_...)
STRIPE_API_KEY=sk_test_your_key_here

# Stripe URLs for account onboarding
STRIPE_REFRESH_URL=http://localhost:8000/reauth
STRIPE_RETURN_URL=http://localhost:8000/return

# Application Settings
APP_ENV=development
DEBUG=True

# CORS Configuration
# For production, set to your specific domain(s), comma-separated
# Example: ALLOWED_ORIGINS=https://yourdomain.com,https://www.yourdomain.com
ALLOWED_ORIGINS=*

# Server Configuration
HOST=0.0.0.0
PORT=8000

# Founder Authentication Key
FOUNDER_KEY=83
